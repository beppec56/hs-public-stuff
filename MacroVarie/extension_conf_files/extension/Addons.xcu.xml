			</prop>
		    </node>
		</node>
		<!-- 
		     inserisce in menu standard, dopo Inserisci -->
		<!--
		    inserisce nel menu Inserisci (in submenu Comando di campo, dopo Autore)
		    per spiegazioni vedere il file:
		    officecfg/registry/schema/org/openoffice/Office/Addons.xcs
		    nel codice sorgente di OOo
		-->
		<node oor:name="OfficeMenuBarMerging">
		    <node oor:name="it.acca-esse.oxt.it_acca_esse_MacroVarie.OfficeMenuBarMerging.m1" oor:op="replace">
				<node oor:name="S1" oor:op="replace">
				    <!--
					per il merge point vedere in:
					- sw/uiconfig/swriter/menubar/menubar.xml (dove si ha la formazione del menu in Writer, come esempio)
					- officecfg/registry/data/org/openoffice/Office/UI/GenericCommands.xcu (dove i singoli menu sono descritti)
					- officecfg/registry/schema/org/openoffice/Office/Addons.xcs e
					- framework/source/uielement/menubarmerger.cxx dove alcune delle voci disponibili per il merge dei menu
					tutti i file nel codice sorgente di OOo
				    -->
				    <prop oor:name="MergePoint">
						<!-- significa il menu Inserisci (.uno:InsertMenu) > Comando di campo > ( .uno:FieldMenu )-->
						<value>.uno:InsertMenu\.uno:FieldMenu\.uno:InsertAuthorField</value>
						<!-- value>.uno:InsertMenu\.uno:InsertSymbol (solo per riferimento)</value -->
				    </prop>
				    <prop oor:name="MergeCommand">
						<!-- valori possibili per MergeCommand:
						     AddAfter	dopo il target
						     AddBefore	prima del target
						     Replace al posto del target (e lo ripristina togliendo la estensione)
						     Remove
						-->
						<value>AddAfter</value>
				    </prop>
				    <prop oor:name="MergeFallback">
						<!-- valori possibili per MergeFallback
						     AddPath
						     Ignore
						-->
						<value>AddPath</value>
				    </prop>
				    <prop oor:name="MergeContext">
					<!-- contesto: solo i documenti Writer -->
						<value>com.sun.star.text.TextDocument</value>
				    </prop>
				    <!--
					 ora il menu aggiunto
				    -->
				    <node oor:name="MenuItems">
						<!-- aggiunge un separatore (COMMENTATO!)
						<node oor:name="m1" oor:op="replace">
						    <prop oor:name="URL" oor:type="xs:string">
							<value>private:separator</value>
						    </prop>
						</node --> 
						<!-- voce aggiunta -->
						<node oor:name="m2" oor:op="replace">
						    <!-- comando solo in Writer -->
						    <prop oor:name="Context" oor:type="xs:string">
								<value>com.sun.star.text.TextDocument</value>
						    </prop>
						    <prop oor:name="ImageIdentifier" oor:type="xs:string">
								<value/>
						    </prop>
						    <prop oor:name="URL" oor:type="xs:string">
								<value>macro:///it_acca_esse_MacroVarie.Md1.inserisciSegnapostoTesto</value>
						    </prop>
						    <prop oor:name="Title" oor:type="xs:string"  oor:localized="true">
								<value>Inserisci segnaposto testo...</value>
								<value xml:lang="it">Inserisci segnaposto testo...</value>
						    </prop>
						    <prop oor:name="Target" oor:type="xs:string">
								<value>_self</value>
						    </prop>
						</node>
				    </node>
				</node>
		    </node>
		</node>
    </node>
</oor:component-data>
